---
import BaseLayout from "../layouts/BaseLayout.astro";
import Icons from "../components/Icons.astro";
import { about } from "../data/about";
---

<BaseLayout title="Trey Helmer · About" description={about.headline}>
  <section class="grid gap-8 md:grid-cols-[1.35fr_0.65fr] md:items-start">
    <div>
      <p class="text-sm font-medium tracking-wide text-white/60">About</p>
      <h1 class="mt-3 text-3xl font-semibold leading-tight text-white/95 sm:text-4xl">
        {about.headline}
      </h1>
      <div class="mt-4 space-y-4 text-base leading-relaxed text-white/70">
        {about.paragraphs.map((p) => (
          <p>{p}</p>
        ))}
      </div>

      <div class="mt-6 flex flex-wrap items-center gap-3">
        <a
          href="/portfolio"
          class="rounded-xl bg-white px-4 py-2.5 text-sm font-semibold text-ink-950 hover:bg-white/90"
        >
          View projects
        </a>
        <a
          href="/contact"
          class="rounded-xl border border-white/15 bg-white/5 px-4 py-2.5 text-sm font-semibold text-white/85 hover:bg-white/10"
        >
          Contact
        </a>
      </div>

      <div class="mt-8 flex items-center gap-4">
        <a class="inline-flex items-center gap-2 text-sm text-white/70 hover:text-white/95" href="https://github.com/PCHIII" target="_blank" rel="noreferrer">
          <Icons name="github" class="h-5 w-5" /> GitHub
        </a>
        <a class="inline-flex items-center gap-2 text-sm text-white/70 hover:text-white/95" href="https://www.linkedin.com/in/treyhelmer/" target="_blank" rel="noreferrer">
          <Icons name="linkedin" class="h-5 w-5" /> LinkedIn
        </a>
        <a class="inline-flex items-center gap-2 text-sm text-white/70 hover:text-white/95" href="mailto:treyhelmer@gmail.com">
          <Icons name="mail" class="h-5 w-5" /> Email
        </a>
      </div>
    </div>

    <aside class="space-y-6">
      <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
        <p class="text-sm font-semibold text-white/85">Profile</p>
        <div class="mt-4 flex items-center gap-4">
          <img
            src="/me/trey.jpeg"
            alt="Trey Helmer"
            class="h-16 w-16 rounded-2xl border border-white/10 object-cover"
            loading="lazy"
          />
          <div>
            <p class="text-sm font-semibold text-white/90">Trey Helmer</p>
            <p class="text-sm text-white/60">Solutions Engineer · Partnerships · Integrations</p>
          </div>
        </div>
      </div>

      <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
        <p class="text-sm font-semibold text-white/85">Certificates</p>
        <div class="mt-4 flex flex-col gap-2">
          {about.certificates.map((certificate) => (
            <span class="rounded-xl border border-white/10 bg-white/5 px-3 py-2 text-xs text-white/75">
              {certificate}
            </span>
          ))}
        </div>
      </div>

      <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
        <p class="text-sm font-semibold text-white/85">Skills</p>
        <div class="mt-4 flex flex-wrap gap-2">
          {about.skills.map((s) => (
            <span class="rounded-full border border-white/10 bg-white/5 px-2.5 py-1 text-xs text-white/70">
              {s}
            </span>
          ))}
        </div>
      </div>

    </aside>
  </section>
</BaseLayout>
