---
const links = [
  { href: "/", label: "About" },
  { href: "/portfolio", label: "Portfolio" },
  { href: "/contact", label: "Contact" },
  { href: "/login", label: "Login", authLink: true },
];
---

<header class="sticky top-0 z-50 border-b border-white/10 bg-ink-950/70 backdrop-blur">
  <nav class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3">
    <a href="/" class="flex items-center gap-3">
      <span class="th-badge grid h-9 w-9 place-items-center overflow-hidden rounded-xl bg-white/10 ring-1 ring-white/10">
        <span class="th-badge__shine" aria-hidden="true"></span>
        <span class="relative z-10 text-sm font-semibold tracking-wide">TH</span>
      </span>
      <span class="text-sm font-semibold tracking-wide text-white/90">Trey Helmer</span>
    </a>

    <div class="desktop-links items-center gap-1">
      {links.map((l) => (
        <a
          href={l.href}
          data-auth-link={l.authLink ? "true" : undefined}
          class="rounded-lg px-3 py-2 text-sm text-white/70 hover:bg-white/10 hover:text-white/95"
        >
          {l.label}
        </a>
      ))}
    </div>

    <details class="mobile-menu group">
      <summary class="list-none rounded-lg border border-white/15 bg-white/5 px-3 py-2 text-sm text-white/85 hover:bg-white/10">
        Menu
      </summary>
      <div class="absolute left-0 right-0 top-full border-b border-white/10 bg-ink-950/95 backdrop-blur">
        <div class="mx-auto max-w-6xl px-4 py-3">
          <div class="flex flex-col gap-1">
            {links.map((l) => (
              <a
                href={l.href}
                data-auth-link={l.authLink ? "true" : undefined}
                class="rounded-lg px-3 py-2 text-sm text-white/70 hover:bg-white/10 hover:text-white/95"
              >
                {l.label}
              </a>
            ))}
          </div>
        </div>
      </div>
    </details>
  </nav>
</header>

<script>
  const authStateKey = "th.authenticated";
  const isAuthenticated = window.localStorage.getItem(authStateKey) === "true";
  const authLinks = document.querySelectorAll('a[data-auth-link="true"]');

  authLinks.forEach((link) => {
    if (!(link instanceof HTMLAnchorElement)) return;
    if (isAuthenticated) {
      link.href = "/secret";
      link.textContent = "Secret";
      return;
    }
    link.href = "/login";
    link.textContent = "Login";
  });
</script>

<style>
  .desktop-links {
    display: none;
  }

  .mobile-menu {
    display: block;
  }

  @media (min-width: 640px) {
    .desktop-links {
      display: flex;
    }

    .mobile-menu {
      display: none;
    }
  }

  .th-badge {
    position: relative;
    isolation: isolate;
    overflow: hidden;
    border-radius: 0.75rem;
    clip-path: inset(0 round 0.75rem);
    contain: paint;
  }

  .th-badge::after {
    content: "";
    position: absolute;
    inset: -30%;
    z-index: 0;
    background:
      radial-gradient(circle at 28% 22%, rgba(129, 140, 248, 0.34), transparent 50%),
      radial-gradient(circle at 72% 78%, rgba(34, 211, 238, 0.24), transparent 52%);
    animation: th-wave 8s ease-in-out infinite;
    border-radius: inherit;
  }

  .th-badge__shine {
    position: absolute;
    inset: -45%;
    z-index: 1;
    pointer-events: none;
    background: linear-gradient(
      110deg,
      transparent 46%,
      rgba(255, 255, 255, 0.12) 49%,
      rgba(255, 255, 255, 0.88) 50%,
      rgba(255, 255, 255, 0.12) 51%,
      transparent 54%
    );
    transform: translateX(-145%) rotate(9deg);
    animation: th-shimmer 6s ease-in-out infinite;
    mix-blend-mode: normal;
    border-radius: inherit;
  }

  @keyframes th-wave {
    0%, 100% {
      transform: translate3d(-4%, 1%, 0) scale(1);
    }
    50% {
      transform: translate3d(4%, -3%, 0) scale(1.08);
    }
  }

  @keyframes th-shimmer {
    0%, 58%, 100% {
      transform: translateX(-145%) rotate(9deg);
      opacity: 0;
    }
    12%, 30% {
      opacity: 0.65;
    }
    40% {
      transform: translateX(145%) rotate(9deg);
      opacity: 0;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .th-badge::after,
    .th-badge__shine {
      animation: none;
    }
  }
</style>
